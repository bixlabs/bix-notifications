{
  "name": "bix-notifications",
  "version": "1.1.1",
  "description": "Notification module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "build": "npm run lint && npm run compile",
    "prepublish": "npm run build",
    "lint": "eslint src",
    "test": "nyc better-npm-run test",
    "compile": "babel src --out-dir dist"
  },
  "betterScripts": {
    "test": {
      "command": "mocha --compilers js:babel-register -b test/unit/*.spec.js"
    }
  },
  "babel": {
    "presets": [
      "es2017",
      "es2016",
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports",
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "mocha"
    ],
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 2,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreRegExpLiterals": true,
          "ignorePattern": "^\\s*var\\s.+=\\s*require\\s*\\(/"
        }
      ],
      "no-param-reassign": [
        "error", {
          "props": false
        }
      ],
      "no-trailing-spaces": [
        "error", {
          "skipBlankLines": true
        }
      ],
      "no-unused-expressions": [
        "error", {
          "allowTernary": true
        }
      ],
      "no-use-before-define": [
        "error", {
          "functions": false,
          "classes": false
        }
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ]
    },
    "globals": {
      "describe": true,
      "it": true,
      "before": true,
      "beforeEach": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bixlabs/bix-notifications.git"
  },
  "keywords": [
    "bixlabs",
    "notifications"
  ],
  "author": "Edd Su√°rez <eddsuarez89@gmail.com> (https://github.com/eddsuarez)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bixlabs/bix-notifications/issues"
  },
  "homepage": "https://github.com/bixlabs/bix-notifications/issues#readme",
  "dependencies": {
    "debug": "^2.6.2",
    "fs": "0.0.1-security",
    "mongoose": "^4.7.8",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^6.1.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2016": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.24.0",
    "babel-runtime": "^6.23.0",
    "better-npm-run": "0.0.14",
    "bluebird": "^3.5.0",
    "chai": "^3.5.0",
    "chance": "^1.0.6",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-mocha": "^4.8.0",
    "eslint-plugin-react": "^6.9.0",
    "mocha": "^3.2.0",
    "nyc": "^10.2.0",
    "socket.io": "^1.7.3",
    "socket.io-client": "^1.7.3"
  }
}
